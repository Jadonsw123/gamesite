<%- include("../partials/head.ejs") %>
		



<div class='main-content'>
	<div id="topbar">
		<span class="scoreLabel1 scoreLabel">Level: 
		<span id="score1" >0</span></span>
		<span class="scoreLabel2 scoreLabel"> Score: 
		<span id="score2">0</span></span>
	</div>
	
	<div class="canvas">
		<canvas id="gameCanvas" width="400" height="600"></canvas>
		<a id="reset" class="btn btn-primary">Reset Game</a>
		<p id="ghost">GHOST MODE: <input type="checkbox"></p>
	</div>
	<div class="tables">
	<table id="personal">
		<thead>
			<tr><th colspan="3">Personal Leaderboard:</th></tr>
			<tr>
				<th>Place</th>
				<th class="tableScore1">Level</th>
				<th class="tableScore2">Score</th>
			</tr>
		</thead>
		<tbody class="personal">
		</tbody>
	</table>
	<table id="global">
		<thead>
			<tr><th colspan="4">Global Leaderboard:</th></tr>
			<tr>
				<th>Place</th>
				<th>User</th>
				<th class="tableScore1">Level</th>
				<th class="tableScore2">Score</th>
			</tr>
		</thead>
		<tbody class="global">
		</tbody>
	</table>
</div>
</div>
<script src="/js/games.js"></script>
<% if(!currentUser){ %>
	<script>
		setTimeout(() => alert("Please login to save your scores!"), 1000);
		
	</script>
	<% } %>
	</body>
</html>

